#File name: comiccreator.kv
<ComicCreator>:
	#Three anchor layouts
	#toolbox
	AnchorLayout:
		anchor_x: 'left'
		anchor_y: 'top'
		ToolBox:
			id: _tool_box
		#ch3 part events and attributes : now toolbox can access drawing 
		#space through this to draw figures on it
			drawing_space: _drawing_space
			#access root through comiccreator attribute
			comic_creator:root
			size_hint: None, None
			width:100
	#
	AnchorLayout:
		anchor_x: 'right'
		anchor_y: 'top'
		DrawingSpace:
			id: _drawing_space
			status_bar: _status_bar
			#for ch3 
			general_options: _general_options
			tool_box: _tool_box
			size_hint:None,None
			width: root.width- _tool_box.width
			height: root.height- _general_options.height- _status_bar.height 
			#using id attribute to refer to height of the respective 
			#components
	AnchorLayout:
		anchor_x: 'center'
		anchor_y: 'bottom'
		BoxLayout:
			orientation : 'vertical'
			GeneralOptions:
				#for ch 3
				id: _general_options
				drawing_space:_drawing_space
				comic_creator:root
				size_hint: 1,None
				height:48
			StatusBar:
				id: _status_bar
				size_hint:1,None
				height:24
