<ListItem>:
	
	#BoxLayout:
	#boundary box
	canvas.before:
		Color:
            rgba: 0, 0, 0, .9
        Line:
            width: 1.
            rectangle: (self.x, self.y, self.width, self.height)
	orientation:"vertical"
	#Title
	Label:
		text:self.parent.title
		color:"black"
	#In future may have to create a TextInput field that allows editing after clicking
	#TextInput:
	Label:
		text:self.parent.content
		color:"black"

<DisplayList>:
	# greenish bounding box
    canvas.before:
		Color:
            rgba: .1, 1,.1, .9
        Line:
            width: 2.
            rectangle: (self.x, self.y, self.width, self.height)
	ScrollView:
		id:scroll		
		do_scroll_x: False
		do_scroll_y: True
		BoxLayout:			
			orientation:"vertical"
		    padding: 10,10
		    size_hint_y:None
			id: noteList
				
			
<InsertNote>:
    orientation:"vertical"
    padding: 10
    canvas:
        Color:
            rgba: .1, .1, 1, .9 
        Line:
            width: 2.
            rectangle: (self.x, self.y, self.width, self.height)
    TextInput:
    	id: enterTitle
    	multiline: False
    	focus:True
    	hint_text: "Enter note Title"
    	font_size: "40sp"
    TextInput:
    #Enter Note here
        id: enterNote
        tag:"default"
#       title:"DefTitle"
        multiline: True
        focus:True
        hint_text: "Enter your note here.."
        font_size: "28sp"
        
   
    #space for widget to add tags
    
    Button:
    	id: insertNote
    	on_press: self.parent.addNote()
    	on_release: self.parent.removeText(self.parent.ids['enterTitle'],self.parent.ids['enterNote'])
        text:"ADD"
        padding: 10
        background_color:"blue"
        size_hint: 1, None
        height: "40dp"
        pos_hint: {'center_x': .5}
        
<NoteManager>:
    id:NM
    labelNote: title
    orientation: "vertical"
    BoxLayout:
        canvas.before:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                size: self.size
                pos: self.pos

        padding: 40
        orientation: "vertical"
        height: "50dp"
        BoxLayout:
        	orientation: "horizontal"
	        Label: 
	            id:title
	            text:"Notes App1"
	            text_size: self.size
	            font_size:40
	            halign:'left'
	            valign:'middle'
	            color: "black"
	        TextInput:
	        	id:notesSearch
				multiline: False
				hint_text: "Search term"
				size_hint_y: 0.25
	        Button:
	        	id:searchNow
        		text: "Search"
        		size_hint_x:0.2
        		size_hint_y: 0.25
        		on_press:self.parent.parent.parent.ids['noteListParent'].searchCall(criteria=0,title=self.parent.parent.parent.ids['notesSearch'].text)
        		on_release:self.parent.parent.parent.removeText(self.parent.parent.parent.ids['notesSearch'])
        	Button:
        		id:clearSearch
        		text:"Clear Search"
        		size_hint_x:0.2
        		size_hint_y: 0.25
        		on_press:self.parent.parent.parent.ids['noteListParent'].searchCall(criteria=2,title=None)
        		on_release:self.parent.parent.parent.removeText(self.parent.parent.parent.ids['notesSearch'])	
        #save Notes to file and refresh list
        InsertNote:
            id: viewNotes
        DisplayList:
        	id: noteListParent

