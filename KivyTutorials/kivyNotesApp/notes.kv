<ListItem>:
	
	#BoxLayout:
	#boundary box
	canvas.before:
		Color:
            rgba: 0, 0, 0, .9
        Line:
            width: 1.
            rectangle: (self.x, self.y, self.width, self.height)
	orientation:"vertical"
	#Title
	Label:
		text:self.parent.title
		color:"black"
	#Need to create a TextInput field that allows editing after clicking
	TextInput:
		text:self.parent.content
		color:"black"

<DisplayList>:
	# greenish bounding box
    canvas.before:
		Color:
            rgba: .1, 1,.1, .9
        Line:
            width: 2.
            rectangle: (self.x, self.y, self.width, self.height)
	ScrollView:
		id:scroll		
		do_scroll_x: False
		do_scroll_y: True
		BoxLayout:			
			orientation:"vertical"
		    padding: 10,10
		    size_hint_y:None
			id: noteList
				
			
<InsertNote>:
    orientation:"vertical"
    padding: 10
    canvas:
        Color:
            rgba: .1, .1, 1, .9 
        Line:
            width: 2.
            rectangle: (self.x, self.y, self.width, self.height)
        
    TextInput:
    #Enter Note here
        id: enterNote
        tag:"default"
        title:"DefTitle"
        multiline: True
        focus:True
        hint_text: "Enter your note here.."
        font_size: "28sp"
    Button:
    	id: insertNote
    	on_press: self.parent.addNote()
    	on_release: self.parent.removeText()
        text:"ADD"
        padding: 10
        background_color:"blue"
        size_hint: 1, None
        height: "40dp"
        pos_hint: {'center_x': .5}
        
<NoteManager>:
    id:NM
    labelNote: title
    orientation: "vertical"
    BoxLayout:
        canvas.before:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                size: self.size
                pos: self.pos

        padding: 40
        orientation: "vertical"
        Label: 
            id:title
            text:"Notes App1"
            text_size: self.size
            font_size:40
            halign:'left'
            valign:'middle'
            size_hint_y: None
            height: "50dp"
            color: "black"
        
        #save Notes to file and refresh list
        InsertNote:
            id: viewNotes
        DisplayList:
        	id: noteListParent

