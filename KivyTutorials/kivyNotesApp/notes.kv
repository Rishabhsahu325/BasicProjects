<InsertNote>:
    #Need to create a bounding rectangle here
    orientation:"vertical"
    padding: 10
    #purple bounding box
    canvas:
        Color:
            rgba: .1, .1, 1, .9 
        Line:
            width: 2.
            rectangle: (self.x, self.y, self.width, self.height)
        
    TextInput:
    #Enter Note here
        id: enterNote
        multiline: True
        focus:True
        hint_text: "Enter your note here.."
        font_size: "28sp"
    Button:
    	id: insertNote
    	on_press: self.parent.addNote()
    	#on_release: self.parent.removeText()
        text:"ADD"
        padding: 10
        background_color:"blue"
        size_hint: 1, None
        height: "40dp"
        pos_hint: {'center_x': .5}
